<h1>Show post</h1>
<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-center mt-4">
  <%= render "api/v1/posts/form", post: @post%>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= link_to "Edit this post",  edit_api_v1_post_path(@post) %> |
  <%= link_to "Back to posts", api_v1_posts_path %>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= button_to "Destroy this post", @post, method: :delete , class:"btn btn-primary"%>

</div>