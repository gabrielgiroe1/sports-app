<h1>This is the home page</h1>

<% if current_user %>
  <%= button_to "Sign out", api_v1_destroy_user_session_path, method: :delete %>
  <p>You are a <%= current_user.role %></p>
  <% if current_user.user_manager? %>
    <% @users.each do |user| %>
      <%= user.email %>
      <br>
    <% end %>
  <% end %>
  <% if current_user.admin? %>
    <% @users.each do |user| %>
      <%= user.full_name %>
      <br>
    <% end %>
  <% end %>
<% else %>
  <p>You are not signed in </p>
  <%= link_to "Sign Up", api_v1_new_user_registration_path %>
  <%= "/" %>
  <%= link_to "Log In", api_v1_new_user_session_path %>
<% end %>