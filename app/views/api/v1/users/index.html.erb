<h1>Show all user here</h1>
<hr>
<%@users.each do |user| %>
  <tr>
    <%= user.full_name %>
    <br>
    <%= user.email %>
    <% if current_user.admin? %>
      <%= link_to 'user post', post_path(user)  %> |
      <td><%= link_to 'Show', user %></td> |
      <td> <%= link_to "Edit User", update_user_registration_path(user) %></td>
      <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end %>
  </tr>
  <hr>
  <br>
<%end %>
