<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="card text-center pt-5" style="width:23rem">
    <div class="card-body ">
      <h2>Put your time here</h2>
      <%= form_with model: @post do |f| %>
        <%= f.text_field :date, class: "form-control", placeholder: "Date" %>
        <%= f.text_field :distance, class: "form-control", placeholder: "Distance" %>
        <%= f.text_field :time, class: "form-control", placeholder: "Time" %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>