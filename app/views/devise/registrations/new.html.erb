<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="card text-center pt-5" style="width:23rem">
    <%= image_tag 'runner-logo.jpeg', class: "card-img-top" %>
    <p class="w-75 fs-6 fw-bold">Sign up to see your friends progress</p>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


        <a href="#" class="d-block mt-4 text-decoration-none fw-bold">
          <%= image_tag("facebook.png", class: "facebook") %>
          Sign up with Facebook
        </a>
        <div class="d-flex align-item-center mt-4">
          <div class="line"></div>
          <h2 class="line-text">OR</h2>
          <div class="line"></div>
        </div>
        <div class="mb-3 mt-4">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number" %>
        </div>
        <div class="mb-3 mt-4">
          <%= f.text_field :full_name, class: "form-control", placeholder: "Full Name" %>
        </div>
        <div class="mb-3 mt-4">
          <%= f.email_field :email, class: "form-control", placeholder: "email" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
        </div>
        <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
      <% end %>

      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% elsif alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
    </div>
    <div class="card text-center py-2 mt-3" style="width: 23rem;">
      <div class="card-text">
        Have have an account?
        <%= link_to "Sign in", new_user_session_path, class: "fs-6 my-4 text-decoration-none" %>
      </div>
    </div>
  </div>
</div>